{
  "name": "shiba",
  "displayName": "Shiba",
  "version": "0.0.1",
  "description": "A cute home page and tab manager",
  "author": "Justin Chung",
  "homepage_url": "https://github.com/justin13888/shiba",
  "packageManager": "pnpm@8.12.0",
  "scripts": {
    "dev": "plasmo dev --target=chrome-mv3",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "dev:browser": "plasmo dev --serve-host=localhost --serve-port-1012",
    "build": "plasmo build",
    "test": "plasmo test",
    "package": "plasmo package",
    "lint": "prettier --write \"**/*.{ts,tsx,md,mjs}\""
  },
  "dependencies": {
    "plasmo": "0.84.0",
    "svelte": "^4.2.8",
    "svelte-preprocess": "^5.1.2"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.251",
    "@types/node": "20.9.0",
    "prettier": "3.0.3",
    "typescript": "5.2.2"
  },
  "manifest": {
    "homepage_url": "$PLASMO_PUBLIC_SITE_URL",
    "permissions": [
      "scripting",
      "tabs",
      "activeTab",
      "storage",
      "unlimitedStorage",
      "webRequest",
      "contextMenus",
      "history",
      "identity",
      "notifications"
    ],
    "host_permissions": [
      "https://*/*",
      "*://*.youtube.com/*"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "tabs/*"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}
